{% assign remodalName = '-country-select' %}
<div class="c-remodal-country-select remodal" data-remodal-id="modal{{ remodalName }}">
  <button data-remodal-action="close" class="remodal-close c-remodal__btn--close"></button>
  <div class="remodal__info-notice">
    <div class="c-info-notice--country-select">
      <h1 class="c-info-notice__heading--country-select u-col-3 ">Hey Wait a Minute</h1>
      <div class="c-info-notice__body">
        <p>Looks like you as visiting our US site but you are not in the US or Canda. If you would like to visit our UK store use the link below. Otherwise you can continue to our US store </p>
        <div class="c-info-notice__cta">

          <div class="c-info-notice__btn--redirect">
            <a href="https://bibado.co.uk"  class="c-btn--confirm ">Take me to the UK site</a>
          </div>

          <div class="c-info-notice__btn--continue">
            <button data-remodal-action="confirm" class="c-btn--continue">Continue to the US site</button>
          </div>


        </div>
      </div>
    </div>
      </div>

</div>
