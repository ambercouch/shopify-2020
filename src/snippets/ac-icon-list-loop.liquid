
{% assign productTypeArray =  productType | split : '-' %}
{% assign listNameSpace = '' %}
{% for word in productTypeArray %}
  {% assign initial = word | slice: 0 %}
  {% unless forloop.first %}
    {% assign initial = initial | prepend: "-" %}
  {% endunless %}
  {% assign listNameSpace = listNameSpace | append: initial  %}
{% endfor %}

{% assign listNameSpace = listNameSpace | append: '-' | append: blockType %}

<div class="l-icon-list">
    <ul class="l-icon-list__list">
      {% for c in (1..10) %}
        {% assign itemId = 'icon_' | append : c %}
        {% assign titleId = 'title_' | append : c %}
        {% if shop.metafields[listNameSpace][itemId] or product.metafields[listNameSpace][itemId] %}
        <li class="l-icon-list__item">
          <div class="l-icon-list__icon-thumb">
            <div class="c-icon-thumb">
              <div class="c-icon-thumb__icon--{{ c }}">
                {%  if product.metafields[listNameSpace][itemId] %}
                  {% assign iconFileName =  product.metafields[listNameSpace][itemId] %}
                  {% else %}
                    {% assign iconFileName = shop.metafields[listNameSpace][itemId] %}
                    {% endif %}
               <img src="{{ iconFileName  | file_img_url: '500x' }}" alt="icon" />
              </div>
              {% if shop.metafields[listNameSpace][titleId]  or product.metafields[listNameSpace][titleId] %}
                {%  if product.metafields[listNameSpace][titleId] %}
                  {% assign iconTitle =  product.metafields[listNameSpace][titleId] %}
                {% else %}
                  {% assign iconTitle = shop.metafields[listNameSpace][titleId] %}
                {% endif %}
                <div class="c-icon-thumb__title">
                  {{ iconTitle  }}
                </div>
              {% endif %}
            </div>
          </div>
        </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>

