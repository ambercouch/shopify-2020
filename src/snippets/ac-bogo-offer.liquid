{% assign bogoOffer = false %}
  {% for tag in product.tags %}
    {% if tag contains 'BOGO' %}
      {% assign bogoOffer = true %}
      {% assign bogoHandle = tag %}
      {% assign bogoTextHandle = bogoHandle | append : '_intro' %}
      {% assign bogoTitleHandle = bogoHandle | append : '_title' %}
      {% assign bogoText = shop.metafields.bogo[bogoTextHandle] %}
      {% assign bogoTitle = shop.metafields.bogo[bogoTitleHandle] %}
    {% endif %}
  {% endfor %}
  {% if bogoOffer == true %}
    {% if bogoText != blank %}
      {{ bogoText }}
    {% else %}
      <div class="c-product-form__offer-text--bogo">
        <h6>Bibado Buy One Give One Limited Offer!</h6>
        <p>Why not get a second Bibado Coverall for <strong>free</strong>! We will send it to your friend for just £1.95 to cover postage and packing.</p>
        <p>Just check the <strong>Buy One Give One</strong> checkbox and add your friend's address before adding your bib to the cart.</p>
        <p class="c-product-form__property-field">
          <input id="bogoAddressPropety" type="hidden" name="" value="">
          <input id="acceptBogo" type="checkbox" name="acceptBogo" value="Yes">
          <label for="acceptBogo">Buy One Give One</label><br>
        </p>
      </div>

      <div class="c-product-form__remodal" >
        <div class="c-remodal remodal" data-remodal-id="modal-additional-address" id="modal-additional-address">
          <button data-remodal-action="close" class="remodal-close c-remodal__btn--close"></button>
          <div class="c-remodal__content">
            <div class="c-remodal__contact-form--additional-address">
              <p>Add your friend's name and address and we will send them a Free Bibado Coverall (£1.95 for postage)</p>
              {% include 'ac-additional-address-form' %}
            </div>

          </div>

        </div>
      </div>


    {%  endif %}

  {% endif %}
