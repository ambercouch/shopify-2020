<div class="c-tag-list">
    <ul class="c-tag-list__list">
      {% for tag in blog.all_tags %}
        {% if current_tags contains tag %}
          <li class="c-tag-list__item is-active">
            {{ tag | link_to_remove_tag: tag }}
          </li>
        {% else %}
          <li class="c-tag-list__item">
            {{ tag | link_to_tag: tag }}
          </li>
        {% endif %}
      {% endfor %}
    </ul>
</div>

