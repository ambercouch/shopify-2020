<div class="l-main__page--static-page l-main__page{{ page.title | handle }}">
    <div class="l-page--static-page l-page--{{ page.title | handle }}">

        <header class="l-page__header--static-page l-page__header--{{ page.title | handle }} {{ classHeroImage }} {{ classHeroText }}" role="banner">
            <h1 class="l-page__heading--static-page l-page__heading--{{ page.title | handle }}" >
                <span class="l-page__title">{{ 'customer.reset_password.title' | t }}</span>
            </h1>
        </header>

<div class="c-contact-form">
  {% form 'reset_customer_password' %}

    <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

    {{ form.errors | default_errors }}

    <label for="ResetPassword">
         <span class="c-contact-form__label-text" >
      {{ 'customer.reset_password.password' | t }}
         </span>
        <span class="c-contact-form__input-wrapper" >
    <input type="password"
           class="c-contact-form__input"
      name="customer[password]"
      id="ResetPassword"
      class="{% if form.errors contains 'password' %}input-error{% endif %}"
      placeholder="{{ 'customer.reset_password.password' | t }}">
        </span>
    </label>

    <label for="PasswordConfirmation" >
         <span class="c-contact-form__label-text" >
      {{ 'customer.reset_password.password_confirm' | t }}
         </span>
        <span class="c-contact-form__input-wrapper" >
    <input type="password"
           class="c-contact-form__input"
      name="customer[password_confirmation]"
      id="PasswordConfirmation"
      class="{% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
      placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
        </span>
    </label>

    <div class="c-contact-form__input-wrapper--submit">

    <input type="submit" class="c-btn--contact-submit c-contact-form__input--submit" value="{{ 'customer.reset_password.submit' | t }}">
    </div>
  {% endform %}
</div>
    </div>
</div>
