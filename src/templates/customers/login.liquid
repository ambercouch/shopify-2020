<div class="l-main__page--static-page l-main__page{{ page.title | handle }}">
  <div class="l-page--static-page l-page--{{ page.title | handle }}">

    <header class="l-page__header--static-page l-page__header--{{ page.title | handle }} {{ classHeroImage }} {{ classHeroText }}" role="banner">
      <h1 class="l-page__heading--static-page l-page__heading--{{ page.title | handle }}" >
        <span class="l-page__title">{{ 'customer.login.title' | t }}</span>
      </h1>
    </header>
    <div class="form-success hide" data-reset-success>
  {{ 'customer.recover_password.success' | t }}
</div>

<div class="c-contact-form" data-login-form>
  {% form 'customer_login' %}

    {{ form.errors | default_errors }}

    <label for="CustomerEmail">
      <span class="c-contact-form__label-text" >
      {{ 'customer.login.email' | t }}
         </span>
      <span class="c-contact-form__input-wrapper" >
    <input type="email"
           name="customer[email]"
           id="CustomerEmail"
           class="{% if form.errors contains 'email' %}input-error{% endif %} c-contact-form__input"
           placeholder="{{ 'customer.login.email' | t }}"
           spellcheck="false"
           autocomplete="off"
           autocapitalize="off"
           autofocus>
      </span>
    </label>

    {% if form.password_needed %}
      <label for="CustomerPassword" >
        <span class="c-contact-form__label-text" >
        {{ 'customer.login.password' | t }}
        </span>
        <span class="c-contact-form__input-wrapper" >
      <input type="password"
             name="customer[password]"
             id="CustomerPassword"
             class="{% if form.errors contains 'password' %}input-error{% endif %} c-contact-form__input"
             placeholder="{{ 'customer.login.password' | t }}"
            >
        </span>
      </label>
    {% endif %}

  <div class="c-contact-form__input-wrapper--submit u-mbm">
    <input type="submit" class="c-btn--contact-submit c-contact-form__input--submit" value="{{ 'customer.login.sign_in' | t }}">
  </div>

    <a href="/">{{ 'customer.login.cancel' | t }}</a>

    <a href="/account/register">
      {{ 'layout.customer.create_account' | t }}
    </a>

    {% if form.password_needed %}
      <a href="#recover" data-recover-toggle>{{ 'customer.login.forgot_password' | t }}</a>
    {% endif %}
  {% endform %}

</div>

<div class="hide" data-recover-form>


  <div class="c-contact-form" data-login-form>
  {% form 'recover_customer_password' %}
    <p>{{ 'customer.recover_password.subtext' | t }}</p>
    {{ form.errors | default_errors }}

    {% if form.posted_successfully? %}
      <span class="hide" data-form-state></span>
    {% endif %}

    <label for="RecoverEmail">
      <span class="c-contact-form__label-text" >
      {{ 'customer.recover_password.email' | t }}
      </span>
      <span class="c-contact-form__input-wrapper" >
    <input type="email"
           name="email"
           class="c-contact-form__input"
           id="RecoverEmail"
           placeholder="{{ 'customer.recover_password.email' | t }}"
           spellcheck="false"
           autocomplete="off"
           autocapitalize="off">
      </span>
    </label>

    <div class="c-contact-form__input-wrapper--submit">
    <input type="submit" class="c-btn--contact-submit c-contact-form__input--submit" value="{{ 'customer.recover_password.submit' | t }}">
    </div>
    <button type="button" data-recover-toggle>
      {{ 'customer.recover_password.cancel' | t }}
    </button>
  {% endform %}
  </div>

</div>

{% if shop.checkout.guest_login %}
  <h2>{{ 'customer.login.guest_title' | t }}</h2>

  {% form 'guest_login' %}
    <input type="submit" class="button" value="{{ 'customer.login.guest_continue' | t }}">
  {% endform %}
{% endif %}
  </div>
</div>
