{% assign pageImage = page.metafields.global.feature_image %}
{% assign pageHeroImage = images[page.metafields.global.hero_image] %}
{% assign pageHeroText = page.metafields.global.hero_text %}

{% if pageHeroImage %}
  {% assign classHeroImage = 'has-hero-image' %}
{% endif %}
{% if pageHeroText %}
  {% assign classHeroText = 'has-hero-text' %}
{% endif %}

<div class="l-main__page--static-page l-main__page{{ page.title | handle }}">
  <div class="l-page--static-page l-page--{{ page.title | handle }}">

    <header class="l-page__header--static-page l-page__header--{{ page.title | handle }} {{ classHeroImage }} {{ classHeroText }}" role="banner">

      {% if pageImage %}
        <div class="l-page__feature-image">
          <img class="l-page__img" src="{{ pageImage | file_img_url: 'original' }}"  alt="{{ page.title | escape }}" />
        </div>
      {% else %}
        <!-- no page image -->
      {% endif %}


      <h1 class="l-page__heading--static-page l-page__heading--{{ page.title | handle }}" >
        <span class="l-page__title">{{ page.title }}</span>
      </h1>

      {% if pageHeroText %}
      <div class="l-page__hero--static-page">
        <div class="l-page__hero-text">
          {{ pageHeroText }}
        </div>
      </div>

      {% else %}
        <!-- no page hero text {{ pageHeroText }} ! -->
      {% endif %}
      {% if pageHeroImage %}
      <div class="l-page__hero-image">
        {% include 'responsive-image' with
          image: pageHeroImage,
          max_width: 800,
          max_height: 800
        %}
      </div>
      {% else %}
        <!-- no page hero image {{ pageHeroImage }} ! -->
      {% endif %}

    </header>

    <div class="l-page__content--static-page">
      {% if page.content != blank %}
        <div class="l-page__rte--static-page rte">
          {{ page.content }}
        </div>
      {% endif %}
<div class="l-page__site-map">
      {% assign menu = linklists.main-menu %}
      <div class="c-site-map">
        <section  class="c-site-map__section--pages">
          <h3 class="c-site-map__heading">{{ linklists.bibado-pages.title }}</h3>
          <ul class="c-site-map__list">
            {% for link in linklists.bibado-pages.links %}
              <li class="c-site-map__item"> <a class="c-site-map__link" href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        </section>
        <section  class="c-site-map__section--collection">
          <h3 class="c-site-map__heading">{{ linklists.bibado-collections.title}}</h3>
          <ul class="c-site-map__list">
            {% for link in linklists.bibado-collections.links %}
              <li class="c-site-map__item"> <a class="c-site-map__link" href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        </section>
        <section  class="c-site-map__section--product">
          <h3 class="c-site-map__heading">{{ linklists.bibado-products.title }}</h3>
          <ul class="c-site-map__list">
            {% for link in linklists.bibado-products.links %}
              <li class="c-site-map__item"> <a class="c-site-map__link" href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        </section>
      </div>
</div>

      <!-- include ac-block-loop -->
      {% assign sObj = page  %}
      {% assign modClass = '--static-page'  %}
      {% include 'ac-block-loop' %}
    </div>
  </div>
</div>
